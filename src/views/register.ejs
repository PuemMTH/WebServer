<% layout('layout') %>

  <title>
    <%= title %>
  </title>
  <%- include('Navbar') %>
  <div class="container p-4">
    <div class="position-relative overflow-hidden m-md-3 rounded" >
        <div class="container-fluid bg-white text-dark p-4 ">
            <form class="row g-3" method="post" enctype="application/x-www-form-urlencoded" action="/auth/register">
                <div class="mb-3 text-start">
                  <h1 class="Display-4">
                    <i class="fas fa-address-card"></i>  Register Page
                  </h1>
                </div>
                <div class="col-md-6">
                  <label for="firstname" class="form-label">First Name </label>
                  <input type="text" class="form-control" id="firstname" placeholder="Kathryn">
                </div>
                <div class="col-md-6">
                  <label for="lastname" class="form-label">Last Name</label>
                  <input type="text" class="form-control" id="lastname" placeholder="Marsh">
                </div>
                <div class="col-12">
                  <label for="inputAddress" class="form-label">Email</label>
                  <input type="email" class="form-control" id="inputAddress" placeholder="xxxxx@gmail.com">
                </div>
                <div class="col-12">
                  <label for="inputPassword" class="form-label">Password</label>
                  <input type="password" class="form-control" id="inputPassword" placeholder="Password">
                </div>
                <div class="col-12">
                    <label for="inputPassword2" class="form-label">Confirm Password</label>
                    <input type="password" class="form-control" id="inputPassword2" placeholder="Password">
                  </div>
                <div class="col-12">
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck">
                    <label class="form-check-label" for="gridCheck">
                      Check me out 
                      <a href="/pdpa" target="_blank" rel="noopener noreferrer">pdpa</a>
                    </label>
                  </div>
                </div>
                <div class="col-12">
                  <button type="submit" class="btn btn-primary">Sign in</button>
                </div>
              </form>
        </div>
    </div>
  </div>